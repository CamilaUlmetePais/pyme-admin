<div class="mx-1">
  <h1><%= @supplier.name %></h1>
  
  <div class='row m-1'>
    <div class='row col-12 col-xl-3'>
      <div class='col-6 col-md-4 col-lg-3 col-xl-4 text-primary fs-6 fw-bold align-content-center'>
        <%= I18n.t('activerecord.attributes.suppliers.phone_number') %>:
      </div> 
      <div class='col-6 align-content-center'><%= @supplier.phone_number %></div>
    </div>
    <div class='row col-12 col-xl-3'>
      <div class='col-6 col-md-4 col-lg-3 col-xl-4 text-primary fs-6 fw-bold align-content-center'>
        <%= I18n.t('activerecord.attributes.suppliers.account_balance') %>:
      </div> 
      <div class='col-6 align-content-center'><%= number_to_currency(@supplier.account_balance) %></div>
    </div>
    <div class='row col-12 col-xl-4'>
      <div class='col-6 col-md-4 col-lg-3 col-xl-6 text-primary fs-6 fw-bold align-content-center'>
        <%= I18n.t('activerecord.attributes.suppliers.notification_threshold') %>:
      </div> 
      <div class='col-6 align-content-center'><%= number_to_currency(@supplier.notification_threshold) %></div>
    </div>
  </div>

  <div class='row my-2'>
    <div class='col-7 col-lg-7 col-xl-3'>
      <button type="button" class='btn btn-outline-primary'>
        <%= link_to I18n.t('helpers.buttons.back'), suppliers_path, class:'text-decoration-none' %>
      </button>
    </div>
    <div class='col-2'>
      <button type="button" class='btn btn-primary'>
        <%= link_to I18n.t('helpers.buttons.edit'), edit_supplier_path(@supplier), class:'text-white text-decoration-none' %>
      </button>
    </div>
  </div>
  
  <h4 class='my-3'><%= I18n.t('views.body.show.history') %></h4>

  <div class="row d-flex py-2">
    <%= simple_form_for(:supplier, html: {}, url: supplier_path(@supplier), method: :get) do |f| %>
      <%= f.error_notification %>
      <div class="col-12 col-md-3 d-inline-block px-2">
        <h5><%= I18n.t('helpers.search.by_date') %></h5>
      </div>
      <div class="col-12 col-md-3 d-inline-block px-2">
        <%# f.input :created_at_from, id: 'created_at_from', placeholder: I18n.t('helpers.search.from'), label: false %>
        <%= f.input :created_at, id: 'created_at_from', placeholder: I18n.t('helpers.search.from'), label: false %>
      </div>
      <div class="col-12 col-md-3 d-inline-block px-2">
        <%# f.input :created_at_to, id: 'created_at_to', placeholder: I18n.t('helpers.search.to'), label: false %>
        <%= f.input :created_at, id: 'created_at_to', placeholder: I18n.t('helpers.search.to'), label: false %>
      </div>
      <div class="col-12 col-md-2 d-inline-block px-2">
        <%= f.button :submit, I18n.t('helpers.buttons.search'), class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
  
  <div class='table-responsive row col-12 col-lg-8 mx-1'>
    <table class='table table-hover'>
      <thead>
        <tr>
          <th><%= I18n.t('activerecord.attributes.outflows.total') %></th>
          <th><%= I18n.t('activerecord.attributes.outflows.paid') %></th>
          <th><%= I18n.t('activerecord.attributes.outflows.items') %></th>
          <th><%= I18n.t('views.body.show.date') %></th>
        </tr>
      </thead>
    
      <tbody>
        <% @transactions.each do |outflow| %>
          <tr>
            <td><%= number_to_currency(outflow.total) %></td>
            <td><%= number_to_currency(outflow.paid) %></td>
            <td><% outflow.items.each do |item| %>
                  <span class='badge bg-primary'><%= item.list %></span>
                <% end %>
            </td>
            <td><%= I18n.l(outflow.created_at, format: :short) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <%= paginate @transactions %>
  
</div>
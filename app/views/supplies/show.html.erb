<div class='mx-1'>
  <h1><%= @supply.name %></h1>

  <div class='row m-1'>
    <div class='row col-12 col-md-6 col-xl-3'>
      <div class='col-6 col-md-4 col-lg-3 text-primary fs-5 fw-bold align-content-center'><%= I18n.t('activerecord.attributes.supplies.price') %>:</div> 
      <div class='col-6 align-content-center'><%= number_to_currency(@supply.price) %></div>
    </div>
    <div class='row col-12 col-md-6 col-xl-3'>
      <div class='col-6 col-md-4 col-lg-3 text-primary fs-5 fw-bold align-content-center'><%= I18n.t('activerecord.attributes.supplies.stock') %>:</div> 
      <div class='col-6 align-content-center'><%= trim_zeroes(@supply.stock) %> <%= @supply.unit %></div>
    </div>
  </div>

  <div class='row my-2'>
    <div class='col-7 col-lg-7 col-xl-3'>
      <button type="button" class='btn btn-outline-primary'>
        <%= link_to I18n.t('helpers.buttons.back'), supplies_path, class:'text-decoration-none' %>
      </button>
    </div>
    <div class='col-2'>
      <button type="button" class='btn btn-primary'>
        <%= link_to I18n.t('helpers.buttons.edit'), edit_supply_path(@supply), class:'text-white text-decoration-none' %>
      </button>
    </div>
  </div>

  <h4 class='my-3'><%= I18n.t('views.body.show.history') %></h4>

  <div class='table-responsive row col-12 col-lg-8 mx-1'>  
    <table class='table table-hover'>
      <thead>
        <tr>
          <th scope="col"><%= I18n.t('activerecord.attributes.outflows.created_at') %></th>
          <th scope="col"><%= I18n.t('activerecord.attributes.outflow_items.quantity') %></th>
          <th scope="col"><%= I18n.t('activerecord.attributes.outflows.total') %></th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @transactions.each do |item| %>
          <tr>
            <td><%= I18n.l(item.created_at, format: :long) %></td>
            <td><%= trim_zeroes(item.quantity) %>  <%= item.supply.unit %></td>
            <td><%= number_to_currency(item.quantity * item.supply.price) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= paginate @transactions %>



</div>
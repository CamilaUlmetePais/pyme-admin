<div>
  <fieldset class='row m-2'>
    <%= simple_form_for(@supply_product_link, html: {}) do |f| %>
      <%= f.error_notification %>
      <div class="row col-12 col-lg-6">
        <%= f.input :product_id, collection: @products, input_html: { id: 'product_id' }, prompt: I18n.t('simple_form.prompts.defaults.product'), label: false %>
      </div>
      <div class="row col-12 col-lg-6">
        <%= f.input :supply_id, collection: @supplies, input_html: { id: 'supply_id' }, prompt: I18n.t('simple_form.prompts.defaults.supply'), label: false %>
      </div>
    
      <div class='row mb-4 mt-1'>
        <div class='col-12 col-md-6 col-lg-3 my-1'>
          <button type="button" class='btn btn-outline-primary'>
            <%= link_to I18n.t('helpers.buttons.back'), supply_product_links_path, data: { confirm: I18n.t('helpers.buttons.are_you_sure')}, class:'text-decoration-none'  %>
          </button>
        </div>
        <div class='col-3'>
          <%= f.button :submit, class:'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </fieldset>
</div>
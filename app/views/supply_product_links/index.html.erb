<div class="row pt-1 mb-3 justify-content-sm-evenly align-content-center">
  <h2 class="col-12 col-md-6 col-lg-7 col-xl-8 align-content-center">
    <%= I18n.t('activerecord.models.supply_product_link.other') %>
  </h2>
   
  <div class="col-12 col-md-6 col-lg-5 col-xl-4">
    <%= link_to I18n.t('helpers.links.new_supply_product_link'), new_supply_product_link_path, class: 'btn btn-primary btn-lg m-1 text-white text-decoration-none' %>
  </div>
</div>

<div class="row table-responsive col-12 col-lg-10 col-xl-8">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><%= I18n.t('activerecord.attributes.supply_product_link.product_id') %></th>
        <th scope="col"><%= I18n.t('activerecord.attributes.supply_product_link.supply_id') %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @supply_product_links.each do |supply_product_link| %>
        <tr>
          <td><%= Product.find(supply_product_link.product_id).name %></td>
          <td><%= Product.find(supply_product_link.supply_id).name %></td>
          <td>
            <%= button_to(image_tag("icon_delete.svg", size: "23x23", data: {title: I18n.t('helpers.buttons.destroy')}), supply_product_link, class: 'btn btn-danger', method: :delete, data: { turbo_method: :delete, turbo_confirm: I18n.t('helpers.buttons.are_you_sure') })%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>